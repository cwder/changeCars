<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    
    
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        
        />
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        />
    
     <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hour"
        />
     
      <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minute"
        />
      
      <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second"
        />
      
      
      
      <LinearLayout 
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          
          
          >
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/img_1"
              
              />
          
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/img_2"
              
              />
          
          <ImageView
              android:layout_marginLeft="5dip" 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/img_3"
              
              />
          
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/img_4"
              
              />
          
          <ImageView 
               android:layout_marginLeft="5dip" 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/img_5"
              
              />
          
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/img_6"
              
              />
          
          <ImageView 
               android:layout_marginLeft="5dip" 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/img_7"
              
              />
          
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/img_8"
              
              />
          
          
          
          
          
          
          
          
          
          
          
          
          
          
      </LinearLayout>

</LinearLayout>
